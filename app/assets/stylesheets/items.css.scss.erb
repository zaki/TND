.item-container {background-color: #fff; padding: 10px; margin: 25px 0; min-height: 200px; width: 150px;}
.item-box {position: absolute;  -box-shadow: 10px 10px 8px #333; }
.item-name {font-weight: bold; font-size: 20px;}
.item-user-name { color: #999; float: right; font-size: 18px;}
.item-price {position: absolute; top: 0px; left: 0px; color: #fff; font-size: 20px;}

.item-details { background: #eee; padding: 20px; }
.item-details .item-name { font-size: 26px; }
.item-details .item-description { padding: 10px 0; }
.item-details .item-expires { margin-top: 25px; border-top: 1px dashed #ccc; }
.item-comments { background: #eee; padding: 20px;}

